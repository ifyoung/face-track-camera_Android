<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="face.camera.beans.record.RecorderActivity">
    <face.camera.beans.record.CameraViewARC
        android:clickable="true"
        android:id="@+id/record_camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <face.camera.beans.arc.widget.FaceRectView
        android:id="@+id/face_rect_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/ble_btn"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ble_off"
            android:layout_width="30dp"
            android:layout_height="25dp" />
    </LinearLayout>
    <ImageView
        android:id="@+id/flash_btn"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/flash_off"
        android:layout_marginRight="15dp"
        android:textColor="@color/white"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <ImageView
        android:id="@+id/video_filter"
        android:layout_width="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/flash_btn"
        android:layout_alignBottom="@+id/flash_btn"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/filter_off" />
    <face.camera.beans.counter.CountupView
        android:visibility="invisible"
        android:id="@+id/video_time_label"
        android:layout_width="100dp"
        android:background="@color/transparent"
        android:layout_below="@+id/video_filter"
        android:layout_centerHorizontal="true"
        android:layout_height="20dp"
        app:isShowDay="false"
        app:isShowHour="true"
        app:isShowMinute="true"
        app:isShowSecond="true"
        app:isShowMillisecond="false"
        app:suffixGravity="center"
        app:suffixTextColor="#fff"
        app:suffixTextSize="20sp"
        app:timeTextColor="#fff"
        app:timeTextSize="18sp">
    </face.camera.beans.counter.CountupView>

    <FrameLayout
        android:layout_marginBottom="20dp"
        android:id="@+id/record_btn_ll"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <FrameLayout
            android:visibility="invisible"
            android:layout_marginLeft="53dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="48dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/index_delete"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="回删"
                    android:drawableTop="@drawable/bigicon_deletion"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:drawablePadding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/index_album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="6dp"
                android:drawableTop="@drawable/index_album"
                android:gravity="center"
                android:text="本地上传"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </FrameLayout>
        <ImageView
            android:layout_gravity="center_vertical|left"
            android:id="@+id/album_show"
            android:src="@drawable/icon_album"
            android:scaleType="fitCenter"
            android:layout_marginLeft="35dp"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <face.camera.beans.record.ui.CustomRecordImageView
            android:id="@+id/custom_record_image_view"
            android:layout_width="121dp"
            android:layout_height="120dp"
            android:layout_gravity="center" />

        <ImageView
            android:layout_gravity="center_vertical|right"
            android:id="@+id/switch_camera"
            android:src="@drawable/camera_switch"
            android:scaleType="fitCenter"
            android:layout_marginRight="35dp"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </FrameLayout>
    <RelativeLayout
        android:id="@+id/switch_ll"
        android:layout_above="@+id/record_btn_ll"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="30dp">
        <co.ceryle.segmentedbutton.SegmentedButtonGroup
            android:layout_centerInParent="true"
            android:id="@+id/switch_camera_mode"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:elevation="2dp"
            app:sbg_animateSelector="fastOutSlowIn"
            app:sbg_animateSelectorDuration="500"
            app:sbg_backgroundColor="@color/gray"
            app:sbg_position="0"
            app:sbg_radius="2dp"
            app:sbg_rippleColor="@color/white"
            app:sbg_selectorColor="@color/white">

            <co.ceryle.segmentedbutton.SegmentedButton
                android:padding="5dp"
                android:id="@+id/left_button"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                app:sb_drawableGravity="right"
                android:textAlignment="center"
                app:sb_textColor="@color/black80"
                app:sb_text="@string/str_seg_video"
                app:sb_drawableTint="@color/white"
                app:sb_drawableTint_onSelection="@color/gray"/>

            <co.ceryle.segmentedbutton.SegmentedButton
                android:padding="5dp"
                android:id="@+id/right_button"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="30dp"
                app:sb_textColor="@color/black80"
                android:layout_weight="1"
                app:sb_drawableGravity="right"
                app:sb_text="@string/str_seg_photo"
                app:sb_drawableTint="@color/white"
                app:sb_drawableTint_onSelection="@color/gray"/>

        </co.ceryle.segmentedbutton.SegmentedButtonGroup>

        <ImageView
            android:id="@+id/go_set"
            android:layout_alignParentRight="true"
            android:src="@drawable/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <face.camera.beans.record.ui.ProgressView
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="6dp"
        android:visibility="gone"
        android:id="@+id/video_record_progress_view"
        android:layout_width="match_parent"
        android:layout_height="6dp" />
    <face.camera.beans.record.ui.FocusImageView
        android:id="@+id/recorder_focus_iv"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:visibility="invisible"
        app:focus_fail_id="@drawable/focus_focus_failed"
        app:focus_focusing_id="@drawable/focus_focusing"
        app:focus_success_id="@drawable/focus_focused" />
    <ImageView
        android:visibility="gone"
        android:id="@+id/count_time_down_iv"
        android:layout_centerInParent="true"
        android:src="@drawable/bigicon_timeout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
